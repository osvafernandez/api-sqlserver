<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <!-- <link rel="stylesheet" href="css/styles.css" /> -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/css/styles.css" />

    <style>
      #tabla-margin {
        padding-top: 15vh;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <header id="header" class="fixed-top">
      <div class="container d-flex align-items-center">
        <h1 class="logo me-auto"><a href="/SisMed/">SisMed</a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html" class="logo me-auto"><img src="~/img/logo.png" alt="" class="img-fluid"></a>-->

        <nav id="navbar" class="navbar order-last order-lg-0">
          <ul>
            <li class="dropdown">
              <a href="#"
                ><span>Instrumentos</span> <i class="bi bi-chevron-down"></i
              ></a>
              <ul>
                <li>
                  <a href="/SisMed/dataTable"
                    >Listado de Instrumentos x &Aacute;reas</a
                  >
                </li>
                <li>
                  <a
                    href="/SisMed/TiposInstrumentos/ListaTiposInstrumentos"
                    title="Debe ser administrador del Sistema"
                    >Tipos de Instrumentos</a
                  >
                </li>
                <li><a href="#">Reportes</a></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#"
                ><span>Tanques</span> <i class="bi bi-chevron-down"></i
              ></a>
              <ul>
                <li><a href="/SisMed/Tanques">Listado de Tanques</a></li>
                <li><a href="#">Reportes</a></li>
              </ul>
            </li>

            <li>
              <a
                class="nav-link scrollto"
                title="Debe ser administrador del Sistema"
                href="/administracion"
                >Administraci&oacute;n</a
              >
            </li>
          </ul>
          <i class="bi bi-list mobile-nav-toggle"></i>
        </nav>
        <a href="/SisMed/login" class="appointment-btn scrollto"
          ><span class="d-none d-md-inline">Entrar</span></a
        >
      </div>
    </header>

    <div id="tabla-margin">
      <h1>Listado de Instrumentos</h1>
      <table class="table table-striped table-hover table-bordered">
        <thead id="tInstrumentHead">
          <tr class="bg-primary text-white">
            <th scope="col">No Serie Inventario</th>
            <th scope="col">Denominacion</th>
            <th scope="col">Area</th>
            <th scope="col">Rango Max</th>
            <th scope="col">Rango Min</th>
            <th scope="col">Marca Modelo</th>
            <th scope="col">Clase VD</th>
            <th scope="col">Ubicacion</th>
            <th scope="col">Valor Maximo Trabajo</th>
            <th scope="col">Conexion Proceso</th>
            <th scope="col">Fecha Proxima Calibracion</th>
            <th scope="col">Diametro Caja</th>
          </tr>
        </thead>
        <tbody>
          <% result.forEach(res => { %>
          <tr>
            <td><%=res.noSerieInventario%></td>
            <td><%=res.denominacion%></td>
            <td><%=res.Area%></td>
            <td><%=res.rangoMax%></td>
            <td><%=res.rangoMin%></td>
            <td><%=res.marcaModelo%></td>
            <td><%=res.claseoVd%></td>
            <td><%=res.ubicacion%></td>
            <td><%=res.valorMaxTrabajo%></td>
            <td><%=res.conexionProceso%></td>
            <td><%=res.fechaProximaCalibracion.slice(0,10) %></td>
            <td><%=res.diametroCaja %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
